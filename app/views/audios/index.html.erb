<h1>audios#index</h1>
<p>Find me in app/views/audios/index.html.erb</p>

<%= form_with(url: audios_path, method: 'get', local: true) do %>
<div class="form-group">
<%= label_tag :country, 'Search for a country '%>
<%= text_field_tag :country, nil, placeholder: 'Eg. Germany', class: 'form-control' %>
</div>
<%= button_tag 'Search', class: 'btn btn-success btn-block' %>
<% end %>

<% api = HTTP.get("https://api.deezer.com/track/3135556").to_s %>
<%= my_hash = JSON.parse(api)%>
<audio src= <%= "#{my_hash["preview"]}" %> controls> </audio>