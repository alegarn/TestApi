<h1>audios#search</h1>
<p>Find me in app/views/audios/search.html.erb</p>

<% unless @track == nil || @track == ""%>
    <p>  <audio src= <%= "#{@track}" %> controls> </audio>  </p>
    <p> <%= @track %> </p>
<% end %>




<%= form_with(url: root_path, method: 'get', local: true) do %>
<div class="form-group">

<%= label_tag :track, 'Search for a song '%>
<%= text_field_tag :track, nil, placeholder: 'Mein land', class: 'form-control' %>
<%= label_tag :album, 'Search for a song '%>
<%= text_field_tag :album, nil, placeholder: 'Made in Germany', class: 'form-control' %>
<%= label_tag :artist, 'Search for a song '%>
<%= text_field_tag :artist, nil, placeholder: 'Rammstein', class: 'form-control' %>


</div>
<%= button_tag 'Search', class: 'btn btn-success btn-block' %>
<% end %>

<div class="col-lg-12 mt-5">
<% if flash[:alert] %>
<div class="alert alert-warning"><%= flash[:alert] %></div>
<% end %>
<div class="mx-auto mt-5" style="width: 400px">